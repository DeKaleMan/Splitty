<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0"
            prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="client.scenes.StartScreenCtrl">

    <AnchorPane layoutX="44.0" layoutY="89.0" prefHeight="132.0" prefWidth="200.0">
        <Button fx:id="create" contentDisplay="RIGHT" layoutX="133.0" layoutY="93.0" mnemonicParsing="false"
                onAction="#createEvent" prefHeight="25.0" prefWidth="84.0" text="Create"
                AnchorPane.leftAnchor="50.0"/>
        <Label fx:id="createEventText" layoutX="14.0" layoutY="14.0" text="Create New Event">
            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Label>
        <TextField fx:id="createEventTextField" layoutX="35.0" layoutY="49.0" promptText="Event name"/>
    </AnchorPane>

    <AnchorPane layoutX="44.0" layoutY="233.0" nodeOrientation="LEFT_TO_RIGHT" prefHeight="132.0" prefWidth="214.0">
        <Button fx:id="join" contentDisplay="RIGHT" layoutX="144.0" layoutY="93.0" mnemonicParsing="false"
                onAction="#joinEvent" prefHeight="25.0" prefWidth="84.0" text="Join" wrapText="true"
                AnchorPane.leftAnchor="50.0"/>
        <Label fx:id="joinEventText" layoutX="14.0" layoutY="14.0" text="Join Event">
            <font>
                <Font name="System Bold" size="24.0"/>
            </font>
        </Label>
        <TextField fx:id="joinEventTextField" layoutX="33.0" layoutY="54.0" prefHeight="25.0" prefWidth="149.0"
                   promptText="Invite code"/>
    </AnchorPane>
    <Button fx:id="showAllEventsButton" layoutX="466.0" layoutY="334.0" mnemonicParsing="false"
            onAction="#showAllEvents" text="Show All Events" AnchorPane.rightAnchor="10.0"/>
    <Label layoutX="97.0" layoutY="14.0" text="Splitty">
        <font>
            <Font size="36.0"/>
        </font>
    </Label>
    <ComboBox fx:id="languageSelect" layoutX="275.0" layoutY="14.0" onAction="#changeLanguage" prefHeight="25.0"
              prefWidth="50.0" promptText="en"/>
    <ImageView fx:id="imageView" fitHeight="103.0" fitWidth="99.0" layoutY="-1.0" pickOnBounds="true"
               preserveRatio="true"/>

    <Button layoutX="514.0" layoutY="14.0" mnemonicParsing="false" onAction="#showSettings" text="Settings"/>


    <Button fx:id="adminLogin" layoutX="14.0" layoutY="365.0" mnemonicParsing="false" onAction="#showAdminLogin"
            text="Admin Login" AnchorPane.leftAnchor="10.0"/>
    <Label fx:id="myEvents" layoutX="397.0" layoutY="71.0" text="My events">
        <font>
          <Font name="System Bold" size="24.0"/>
        </font>
    </Label>
    <ListView fx:id="eventListView" layoutX="367.0" layoutY="121.0" onMouseClicked="#handleMouseClick"
              prefHeight="200.0" prefWidth="176.0"/>

    <ImageView fx:id="flag" fitHeight="25.0" fitWidth="50.0" layoutX="275.0" layoutY="15.0"
               onMouseClicked="#showLangOptions" pickOnBounds="true"/>
    <ProgressIndicator fx:id="progress" layoutX="237.0" layoutY="12.0" prefHeight="25.0" prefWidth="32.0"
                       visible="false"/>


</AnchorPane>
