<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="background" onKeyPressed="#onKeyPressed" prefHeight="400.0" prefWidth="600.0" stylesheets="/general.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.AdminLoginCtrl">
   <children>
      <VBox alignment="CENTER" layoutX="162.0" layoutY="32.0" prefHeight="368.0" prefWidth="276.0" spacing="10.0">
         <children>
            <Text fx:id="signIn" strokeType="OUTSIDE" strokeWidth="0.0" text="Sign in">
               <font>
                  <Font size="32.0" />
               </font>
            </Text>
            <Text fx:id="instruction" strokeType="OUTSIDE" strokeWidth="0.0" text="Log into your server instance">
               <font>
                  <Font size="15.0" />
               </font>
            </Text>
            <PasswordField fx:id="passwordField" onKeyPressed="#resetPasswordError" prefHeight="40.0" prefWidth="200.0" promptText="Password" />
            <Button fx:id="signInButton" mnemonicParsing="false" onAction="#adminSignIn" prefHeight="25.0" prefWidth="130.0" text="Sign in" />
            <Label fx:id="passwordInstructionsText" alignment="TOP_LEFT" prefHeight="58.0" prefWidth="184.0" text="You can find your password in the console of your server instance" textAlignment="CENTER" wrapText="true">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin></Label>
         </children>
      </VBox>
      <Button fx:id="back" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#back" text="Back" />
      <Label fx:id="serverNotFoundError" layoutX="438.0" layoutY="165.0" prefHeight="17.0" prefWidth="153.0" styleClass="errorLabel" text="Server not found*" textFill="RED" visible="false">
         <font>
            <Font size="10.0" />
         </font>
      </Label>
      <Label fx:id="incorrectPasswordError" layoutX="438.0" layoutY="216.0" prefHeight="17.0" prefWidth="153.0" styleClass="errorLabel" text="Incorrect password*" textFill="RED" visible="false">
         <font>
            <Font size="10.0" />
         </font>
      </Label>
   </children>
</AnchorPane>
