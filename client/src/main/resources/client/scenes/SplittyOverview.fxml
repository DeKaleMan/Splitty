<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane fx:id="background" onKeyPressed="#onKeyPressed" prefHeight="400.0" prefWidth="600.0" stylesheets="/general.css" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.SplittyOverviewCtrl">
    <children>
        <Label fx:id="titleLabel" alignment="TOP_LEFT" layoutX="58.0" layoutY="3.0" prefHeight="99.0" prefWidth="381.0" text="Title" wrapText="true">
            <font>
                <Font name="System Bold" size="48.0" />
            </font>
        </Label>
        <Button fx:id="backButton" layoutX="14.0" layoutY="26.0" mnemonicParsing="false" onAction="#back" text="Back" AnchorPane.leftAnchor="10" />
        <Pane layoutX="347.0" layoutY="84.0" prefHeight="309.0" prefWidth="239.0">
            <children>
                <ListView fx:id="participantListView" layoutX="46.0" layoutY="51.0" onKeyPressed="#onKeyPressed" prefHeight="200.0" prefWidth="148.0" />
                <HBox alignment="CENTER" layoutX="-16.0" layoutY="14.0" prefHeight="35.0" prefWidth="272.0" spacing="10.0">
                    <children>
                        <Label fx:id="participants" styleClass="headerLabel" text="Participants">
                            <font>
                                <Font size="24.0" />
                            </font>
                        </Label>
                    </children>
                </HBox>
                <Label fx:id="eventCreatedLabel" layoutX="120.0" layoutY="288.0" text="Event created successfully*" textFill="#3700ff" visible="false">
                    <font>
                        <Font size="10.0" />
                    </font>
                </Label>
                <Label fx:id="joinedEventLabel" layoutX="112.0" layoutY="280.0" text="Event joined successfully#" textFill="#3700ff" visible="false">
                    <font>
                        <Font size="10.0" />
                    </font>
                </Label>
            </children>
        </Pane>
        <Pane layoutX="14.0" layoutY="84.0" prefHeight="309.0" prefWidth="239.0">
            <children>
                <AnchorPane layoutX="5.0" layoutY="21.0" prefHeight="235.0" prefWidth="200.0">
                    <children>
                        <TabPane fx:id="expensesTabPane" layoutX="10.0" layoutY="32.0" prefHeight="200.0" prefWidth="200.0" tabClosingPolicy="UNAVAILABLE">
                            <tabs>
                                <Tab fx:id="allExpenses" text="All" />
                                <Tab fx:id="paidByMe" text="Paid by me" />
                                <Tab fx:id="involvingMe" text="Including me" />
                            </tabs>
                        </TabPane>
                        <HBox alignment="CENTER" layoutX="-9.0" layoutY="-3.0" prefHeight="35.0" prefWidth="239.0" spacing="10.0">
                            <children>
                                <Label fx:id="expenses" styleClass="label" text="expenses">
                                    <font>
                                        <Font size="24.0" />
                                    </font>
                                </Label>
                                <Button fx:id="addExpenseButton" mnemonicParsing="false" onAction="#showAddExpense" text="Add Expense" />
                            </children>
                        </HBox>
                    </children>
                </AnchorPane>
            <HBox alignment="CENTER" layoutX="20.0" layoutY="256.0" prefHeight="35.0" prefWidth="200.0" spacing="5.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#editExpense" text="Edit" />
                  <Button fx:id="deleteExpenseButton" mnemonicParsing="false" onAction="#deleteExpense" style="-fx-background-color: #c50000;" text="Delete" />
               </children>
            </HBox>

            </children>
        </Pane>
        <VBox alignment="TOP_CENTER" layoutX="250.0" layoutY="161.0" prefHeight="151.0" prefWidth="100.0" spacing="10.0">
            <children>
                <Button fx:id="settleDebtsButton" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" onAction="#viewDebts" prefHeight="26.0" prefWidth="88.0" text="Settle Debts" textAlignment="CENTER" textOverrun="CLIP" wrapText="true" />
                <Button fx:id="statisticsButton" mnemonicParsing="false" onAction="#showStatistics" prefHeight="26.0" prefWidth="85.0" text="Statistics" />
                <Button mnemonicParsing="false" onAction="#editEvent" prefHeight="26.0" prefWidth="85.0" text="Edit Event" />
            </children>
        </VBox>
        <Label fx:id="noExpenseError" layoutX="188.0" layoutY="360.0" text="No expense selected*" textFill="RED" visible="false">
            <font>
                <Font size="10.0" />
            </font>
        </Label>
        <Label fx:id="expenseNotDeletedError" layoutX="188.0" layoutY="360.0" text="Expense could not be deleted*" textFill="RED" visible="false">
            <font>
                <Font size="10.0" />
            </font>
        </Label>
        <Button fx:id="leaveConfirmationButton" layoutX="261.0" layoutY="26.0" mnemonicParsing="false" onAction="#leaveEvent" style="-fx-background-color: #c50000; -fx-background-radius: 6" text="Leave" textFill="white" visible="false" />
        <Button fx:id="cancelLeaveButton" layoutX="329.0" layoutY="26.0" mnemonicParsing="false" onAction="#cancelLeave" style="-fx-background-color: #2a8000; " text="Stay" textFill="white" visible="false" />
        <Label fx:id="confirmationLabel" layoutX="218.0" layoutY="58.0" text="Are you sure you want to leave the event?" visible="false" />
        <HBox alignment="CENTER_RIGHT" layoutX="390.0" layoutY="26.0" prefHeight="25.0" prefWidth="200.0" spacing="5.0">
            <children>
                <Button fx:id="leaveButton" mnemonicParsing="false" onAction="#setConfirmation" style="-fx-background-color: #c50000; " text="Leave" textFill="white" />
                <Button fx:id="sendInvites" mnemonicParsing="false" onAction="#sendInvitesOnClick" text="Send invites" />
            </children>
        </HBox>
        <HBox alignment="CENTER" layoutX="200.0" layoutY="62.0" prefHeight="26.0" prefWidth="200.0" spacing="5.0">
            <children>
                <Label prefHeight="36.0" prefWidth="36.0" text="Code:">
                    <font>
                        <Font size="14.0" />
                    </font>
                </Label>
                <Label fx:id="inviteCode" text="Label">
                    <font>
                        <Font name="System Bold Italic" size="14.0" />
                    </font>
                </Label>
            </children>
        </HBox>
    </children>
</AnchorPane>
