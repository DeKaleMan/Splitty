<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.SettingsCtrl">
   <children>

      <Button layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#back" text="Back" />

      <Label layoutX="200.0" layoutY="14.0" text="Splitty Settings">
         <font>
            <Font name="System Bold" size="28.0" />
         </font>
      </Label>

      <Label layoutX="92.0" layoutY="91.0" prefHeight="27.0" prefWidth="149.0" text="Server URL">
         <font>
            <Font name="System Bold" size="18.0" />
         </font></Label>
      <TextField fx:id="serverURLField" layoutX="92.0" layoutY="115.0" />
      <Label layoutX="92.0" layoutY="182.0" prefHeight="27.0" prefWidth="149.0" text="Email (optional)">
         <font>
            <Font name="System Bold" size="18.0" />
         </font></Label>
      <TextField fx:id="emailField" layoutX="92.0" layoutY="209.0" />
      <Label layoutX="92.0" layoutY="258.0" prefHeight="17.0" prefWidth="86.0" text="Currency">
         <font>
            <Font name="System Bold" size="18.0" />
         </font></Label>
      <TextField fx:id="currencyField" layoutX="92.0" layoutY="285.0" />

      <Label layoutX="425.0" layoutY="87.0" prefHeight="25.0" prefWidth="86.0" text="Language">
         <font>
            <Font name="System Bold" size="18.0" />
         </font></Label>




      <Button layoutX="500.0" layoutY="361.0" mnemonicParsing="false" onAction="#saveSettings" text="Save settings" />
      <VBox layoutX="352.0" layoutY="182.0" prefHeight="155.0" prefWidth="232.0" spacing="5.0">
         <children>
            <Label text="Add language">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Label text="Enter the languagecode and an image for the flag of the language you want to add" wrapText="true" />
            <TextField fx:id="langTextfield" promptText="Languagecode e.g. &quot;en&quot; for English" />
            <Button fx:id="addLangButton" mnemonicParsing="false" onAction="#addLang" text="Add language" />
         </children>
      </VBox>



   </children>
</AnchorPane>
