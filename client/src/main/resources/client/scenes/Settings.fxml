<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane onKeyPressed="#onKeyPressed" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.SettingsCtrl">
   <children>

      <Button fx:id="cancelButton" layoutX="14.0" layoutY="14.0" mnemonicParsing="false" onAction="#back" style="-fx-background-color: #c50000; -fx-background-radius: 6" text="Cancel" textFill="white" />

      <Label layoutX="200.0" layoutY="14.0" text="Splitty Settings">
         <font>
            <Font name="System Bold" size="28.0" />
         </font>
      </Label>

      <Button fx:id="saveButton" layoutX="500.0" layoutY="361.0" mnemonicParsing="false" onAction="#saveSettings" style="-fx-background-color: #2a8000; -fx-background-radius: 6" text="Save settings" textFill="white" />
      <VBox layoutX="346.0" layoutY="200.0" prefHeight="155.0" prefWidth="232.0" spacing="5.0">
         <children>
            <Label text="Add language">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Label text="Enter the languagecode and an image for the flag of the language you want to add" wrapText="true" />
            <TextField fx:id="langTextfield" promptText="Languagecode e.g. &quot;en&quot; for English" />
            <ProgressBar fx:id="progressBar" prefHeight="18.0" prefWidth="232.0" visible="false" />
            <Button fx:id="addLangButton" mnemonicParsing="false" onAction="#addLang" text="Add language" />
         </children>
      </VBox>
      <VBox layoutX="55.0" layoutY="54.0" prefHeight="324.0" prefWidth="188.0">
         <children>

            <Label prefHeight="27.0" prefWidth="149.0" text="Email">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <TextField fx:id="emailField" promptText="e.g. name@domain.com" />
            <Label prefHeight="17.0" prefWidth="86.0" text="Currency">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <TextField fx:id="currencyField" promptText="EU, USD, CHF" />
            <Label text="Name">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
      
            <TextField fx:id="nameField" promptText="unknown" />
            <Label text="IBAN">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <TextField fx:id="ibanField" prefHeight="0.0" prefWidth="150.0" promptText="e.g. NL91ABNA0417164300" />
            <Label text="BIC">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <TextField fx:id="bicField" prefHeight="16.0" prefWidth="188.0" promptText="e.g. HBUKGB4B " />
            <Label text="Server">
               <font>
                  <Font name="System Bold" size="18.0" />
               </font>
            </Label>
            <Button mnemonicParsing="false" prefHeight="26.0" prefWidth="188.0" onAction="#changeServer" text="Change server" />
         </children>
      </VBox>
      <Label layoutX="346.0" layoutY="54.0" prefHeight="27.0" prefWidth="188.0" text="Language">
         <font>
            <Font name="System Bold" size="18.0" />
         </font>
      </Label>
      <Label fx:id="languageTextField" layoutX="346.0" layoutY="81.0" prefHeight="25.0" prefWidth="188.0" text="The language" />

   </children>
</AnchorPane>
