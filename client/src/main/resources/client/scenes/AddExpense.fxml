<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane onKeyPressed="#onKeyPressed" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.AddExpenseCtrl">
   <children>
      <Label fx:id="titleLabel" layoutX="139.0" layoutY="31.0" text="Title">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Label fx:id="addExpenseText" layoutX="376.0" layoutY="31.0" text="Add/Edit Expense" AnchorPane.rightAnchor="20">
         <font>
            <Font name="System Bold" size="24.0" />
         </font>
      </Label>
      <Label fx:id="description" layoutX="330.0" layoutY="84.0" text="Description" />
      <TextArea fx:id="whatFor" layoutX="351.0" layoutY="108.0" prefHeight="82.0" prefWidth="200.0" promptText="What is the exepense about...." />
      <HBox alignment="CENTER_LEFT" layoutX="330.0" layoutY="190.0" prefHeight="44.0" prefWidth="267.0" spacing="10.0" AnchorPane.topAnchor="190.0">
         <children>
            <Label fx:id="expenseTypetext" text="Expense Type" wrapText="true" />
            <ComboBox fx:id="category" accessibleRole="CHECK_MENU_ITEM" prefHeight="25.0" prefWidth="167.0" promptText="Select category" />
         </children>
      </HBox>
      <VBox layoutX="139.0" layoutY="84.0" prefHeight="70.0" prefWidth="167.0" spacing="2.0">
         <children>
            <ComboBox fx:id="personComboBox" onAction="#resetPayerErrors" prefHeight="25.0" prefWidth="171.0" promptText="Select who paid" />
            <Label fx:id="payerError" text="Payer is required*" textFill="RED" visible="false" />
            <TextField fx:id="amount" onKeyPressed="#resetAmountErrors" prefHeight="25.0" prefWidth="150.0" promptText="0.00" />
         </children>
      </VBox>
      <VBox alignment="TOP_RIGHT" layoutX="-1.0" layoutY="84.0" prefHeight="200.0" prefWidth="122.0" spacing="10.0">
         <children>
            <Label fx:id="whoPaid" text="Who paid?" />
            <Label fx:id="howMuch" prefHeight="53.0" prefWidth="63.0" text="How much?" />
            <Label fx:id="when" prefHeight="23.0" prefWidth="37.0" text="When?" />
            <Label fx:id="howToSplit" prefHeight="26.0" prefWidth="71.0" text="How to Split?" />
         </children>
         <padding>
            <Insets top="5.0" />
         </padding>
      </VBox>
      <Label fx:id="amountNegativeError" layoutX="139.0" layoutY="155.0" text="Amount cannot be negative or zero*" textFill="RED" visible="false" />
      <Label fx:id="amountInvalidError" layoutX="139.0" layoutY="155.0" text="Not a number, format e.g 13.99" textFill="RED" visible="false" />
      <Label fx:id="noAmountError" layoutX="139.0" layoutY="155.0" text="An amount is required" textFill="RED" visible="false" />
      <HBox alignment="CENTER_RIGHT" layoutX="543.0" layoutY="336.0" prefHeight="25.0" prefWidth="37.0" spacing="50.0" />
      <Button fx:id="cancel" layoutX="14.0" layoutY="36.0" mnemonicParsing="false" onAction="#back" text="Cancel" />
      <Button fx:id="add" layoutX="523.0" layoutY="336.0" mnemonicParsing="false" onAction="#addExpense" text="Add" />
      <VBox layoutX="139.0" layoutY="172.0" prefHeight="200.0" prefWidth="167.0">
         <children>
            <DatePicker fx:id="dateSelect" onAction="#resetDateErrors" prefHeight="25.0" prefWidth="150.0" promptText="mm/dd/yyyy" />
            <Label fx:id="dateInvalidError" text="Invalid date, e.g 01/31/2023" textFill="RED" visible="false" />
            <Button fx:id="selectAll" mnemonicParsing="false" onAction="#selectAll" prefHeight="25.0" prefWidth="122.0" text="Select all" textAlignment="CENTER" wrapText="true" />
            <ListView fx:id="splitList" onKeyPressed="#onKeyPressed" prefHeight="145.0" prefWidth="167.0" />
         </children>
      </VBox>
      <Label fx:id="addExpenseError" layoutX="417.0" layoutY="365.0" text="Unexpected error when adding expense*" textFill="RED" visible="false">
         <font>
            <Font size="10.0" />
         </font></Label>


   </children>
</AnchorPane>
