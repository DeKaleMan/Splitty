         <font>
            <Font name="System Italic" size="11.0" />
         </font>
      </Label>
      <Button fx:id="connectButton" layoutX="431.0" layoutY="247.0" onAction="#connect" mnemonicParsing="false" text="Connect" />
   </children>
</AnchorPane>
