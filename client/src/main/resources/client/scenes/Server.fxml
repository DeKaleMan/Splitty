<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="client.scenes.ServerCtrl">
   <children>
      <Label layoutX="118.0" layoutY="57.0" text="Change Splitty Server">
         <font>
            <Font name="System Bold" size="36.0" />
         </font>
      </Label>
      <Label layoutX="137.0" layoutY="246.0" text="Server:">
         <font>
            <Font size="18.0" />
         </font>
      </Label>
      <TextField fx:id="serverField" onKeyPressed="#resetError" layoutX="191.0" layoutY="247.0" prefHeight="26.0" prefWidth="240.0" />
      <ImageView fx:id="imageView" fitHeight="102.0" fitWidth="171.0" layoutX="215.0" layoutY="119.0" pickOnBounds="true" preserveRatio="true" />
